// App.jsx
import React, { useState } from 'react';
import axios from 'axios';

function App() {
  const [prompt, setPrompt] = useState('');
  const [response, setResponse] = useState('');

  const handleGenerate = async () => {
    const res = await axios.post('https://your-backend.com/api/generate', { prompt });
    setResponse(res.data.result);
  };

  return (
    <div className="min-h-screen bg-black text-white flex flex-col items-center justify-center p-10">
      <h1 className="text-3xl mb-4">AI Digital Product Generator</h1>
      <input 
        className="p-2 rounded text-black mb-4" 
        value={prompt} 
        onChange={(e) => setPrompt(e.target.value)} 
        placeholder="Enter your idea (e.g. 'Fitness Guide')" 
      />
      <button className="bg-blue-500 px-4 py-2 rounded" onClick={handleGenerate}>
        Generate Product
      </button>
      <div className="mt-6 p-4 bg-gray-800 rounded w-full max-w-lg">
        {response}
      </div>
    </div>
  );
}

export default App;
